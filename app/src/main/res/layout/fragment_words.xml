<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.Words_page.Words_page_Fragment"
        android:background="@color/white"
        android:layout_marginBottom="90dp">

        <ImageView
            android:id="@+id/green_cicle2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/greencicle"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/title_2"
            android:layout_marginTop="38dp"
            android:layout_marginStart="16dp"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="@string/Listening"
            android:textColor="@color/greeen1"
            android:textSize="29sp"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" />


        <Button
            android:id="@+id/Nouns_button"
            android:layout_width="190dp"
            android:layout_height="180dp"
            android:maxLines="1"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/title_2"
            app:layout_constraintEnd_toStartOf="@id/adjectives_button"
            app:layout_constraintBottom_toTopOf="@id/Verbs_button"
            android:layout_marginTop="40dp"
            android:text="@string/Nouns"
            android:textAllCaps="false"
            android:background="@drawable/rounded_button_background"
            android:backgroundTint="@color/greeen"/>

        <Button
            android:id="@+id/adjectives_button"
            android:layout_width="190dp"
            android:layout_height="180dp"
            android:maxLines="1"
            android:textAllCaps="false"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/title_2"
            app:layout_constraintStart_toEndOf="@id/Nouns_button"
            app:layout_constraintBottom_toTopOf="@id/Other_button"
            android:layout_marginTop="40dp"
            android:text="@string/adjectives"
            android:background="@drawable/rounded_button_background"
            android:backgroundTint="@color/greeen2"/>

        <Button
            android:id="@+id/Verbs_button"
            android:layout_width="190dp"
            android:layout_height="180dp"
            android:maxLines="1"
            android:textAllCaps="false"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/Nouns_button"
            app:layout_constraintEnd_toStartOf="@id/Other_button"
            app:layout_constraintBottom_toBottomOf="parent"
            android:text="@string/Verbs"
            android:background="@drawable/rounded_button_background"
            android:backgroundTint="@color/greeen2"/>

        <Button
            android:id="@+id/Other_button"
            android:layout_width="190dp"
            android:layout_height="180dp"
            android:maxLines="1"
            android:textAllCaps="false"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/adjectives_button"
            app:layout_constraintStart_toEndOf="@id/Verbs_button"
            app:layout_constraintBottom_toBottomOf="parent"
            android:text="@string/Other"
            android:background="@drawable/rounded_button_background"
            android:backgroundTint="@color/greeen"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>