<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="word"
            type="String" />
        <variable
            name="translation"
            type="String" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:background="@drawable/button_rounded"
            android:backgroundTint="@color/greeen1"
            >

            <TextView
                android:id="@+id/word_view"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/translation_text"
                android:textColor="@color/white"
                android:textSize="22sp"
                android:textStyle="bold"
                android:padding="8dp"
                android:gravity="center"
                android:text="@{word}"/>

            <TextView
                android:id="@+id/translation_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@id/word_view"
                app:layout_constraintEnd_toStartOf="@id/microphone"
                android:textColor="@color/black"
                android:textSize="22sp"
                android:padding="8dp"
                android:gravity="center"
                android:text="@{translation}"/>

            <ImageView
                android:id="@+id/mic"
                android:layout_width="30dp"
                android:layout_height="0dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:src="@drawable/icon_mic"
                android:background="@color/transparent"
                android:layout_marginHorizontal="16dp"/>

            <ImageView
                android:id="@+id/microphone"
                android:layout_width="30dp"
                android:layout_height="0dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/mic"
                android:src="@drawable/icon_microphone"
                android:background="@color/transparent"
                android:layout_marginHorizontal="16dp"/>


        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>